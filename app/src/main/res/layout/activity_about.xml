<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_b3"
    tools:context="com.cheng.baseapp.view.activity.AboutActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_b2">
        <ImageView
            android:id="@+id/iv_about_back"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_back"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="三毛财经"
            android:textSize="16dp"
            android:textColor="@color/color_o1"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="\t\t\t\t 三毛财经：致力于造一最全、最精、最专的财经知识平台"
        android:textSize="14dp"
        android:textColor="@color/color_g2"
        android:paddingTop="20dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"/>
</LinearLayout>
