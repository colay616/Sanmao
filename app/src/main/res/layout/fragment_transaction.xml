<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_b2"
    android:paddingTop="8dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bg_shadow"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_trans_dingli"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="巴菲特"
            android:textSize="16dp"
            android:textColor="@color/color_g2"
            android:drawableTop="@mipmap/information_on"
            android:drawablePadding="5dp"
            />
        <TextView
            android:id="@+id/tv_trans_tansfer"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="江恩"
            android:textSize="16dp"
            android:textColor="@color/color_g2"
            android:drawableTop="@mipmap/information_on"
            android:drawablePadding="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_shadow">
        <TextView
            android:id="@+id/tv_trans_chicang"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="索罗斯"
            android:textSize="16dp"
            android:textColor="@color/color_g2"
            android:drawableTop="@mipmap/information_on"
            android:drawablePadding="5dp"
            />
        <TextView
            android:id="@+id/tv_trans_transaction"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="haha"
            android:textSize="16dp"
            android:textColor="@color/color_g2"
            android:drawableTop="@mipmap/information_on"
            android:drawablePadding="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_shadow">
        <TextView
            android:id="@+id/tv_trans_into"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hahah"
            android:textSize="16dp"
            android:textColor="@color/color_g2"
            android:drawableTop="@mipmap/information_on"
            android:drawablePadding="5dp"
            />
        <TextView
            android:id="@+id/tv_trans_out"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="haha"
            android:textSize="16dp"
            android:textColor="@color/color_g2"
            android:drawableTop="@mipmap/information_on"
            android:drawablePadding="5dp"
            />
    </LinearLayout>

</LinearLayout>